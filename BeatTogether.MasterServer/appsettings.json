{
  "Security": {
    "PrivateKeyPath": "key.pem",
    "CertificatePath": "cert.pem"
  },
  "MasterServer": {
    "EndPoint": "127.0.0.1:2328"
  },
  "Messaging": {
    "MaximumMessageSize": 412,
    "RequestTimeout": 10000,
    "RequestRetryDelay": 500
  },
  "SessionLifetime": {
    "TimeToLive": 300
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Async" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/BeatTogether.MasterServer-.log",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    ]
  }
}
